<launch>

	<!--Setting defaults of arguments-->
	<arg name="input" default="humanInterface"/>
	<arg name="msgType" default="cmdVel"/>
	<arg name="speedStep" default="0.2"/>
	<arg name="speedUpdateRate" default="10"/>
	
	<node pkg="epos2_control" name="epos2_talker" type="epos2_talker" respawn="true">
		<param name="input" value="$(arg input)" />
		<param name="msgType" value="$(arg msgType)" />
		<param name="speedStep" value="$(arg speedStep)"  type="double"/>
		<param name="speedUpdateRate" value="$(arg speedUpdateRate)"  type="double"/>
	</node>
	
	<node pkg="joy" name="joy_node" type="joy_node" respawn="true"/>

	
	<node pkg="rviz" name="rviz" type="rviz">
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find epos2_control)/TFRvizConfig.vcg"/>

</launch>
